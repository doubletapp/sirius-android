<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/itemLeftDividerContainer"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/itemLeftDividerTop"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/trajectories_vertical_line_background"/>

            <View
                android:id="@+id/itemLeftDividerBottom"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/trajectories_vertical_line_background"/>
        </LinearLayout>

        <View
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:background="@drawable/trajectories_dot_background"/>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardContainer"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="?selectableItemBackground"
        app:cardBackgroundColor="#4d008c"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/itemLeftDividerContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/scholarship_2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Ваша цель: " />

            <TextView
                android:id="@+id/itemTrajectoryGoalText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                tools:text="Впереди еще 10 и 11 классы, так что не расслабляйся!"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/itemTrajectoryHideView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/trajectories_hide_view_background"
        android:clickable="true"
        android:focusable="true"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/itemCardContainer"
        app:layout_constraintBottom_toBottomOf="@id/itemCardContainer"
        app:layout_constraintStart_toStartOf="@id/itemCardContainer"
        app:layout_constraintEnd_toEndOf="@id/itemCardContainer"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>