<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:id="@+id/itemLeftDividerBottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/trajectories_vertical_line_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemTrajectoryHeaderTitle"
        app:layout_constraintTop_toTopOf="@id/itemTrajectoryHeaderTitle"
        app:layout_constraintBottom_toBottomOf="@id/itemTrajectoryHeaderTitle"/>

    <TextView
        android:id="@+id/itemTrajectoryHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:textColor="#de151c2a"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="9 класс"/>
</android.support.constraint.ConstraintLayout>