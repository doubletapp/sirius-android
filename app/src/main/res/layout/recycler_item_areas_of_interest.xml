<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <!--cause it is stupid cardView-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycler_item_selectable_background" />

    <ImageView
        android:id="@+id/areasOfInterestIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_selected_indicator" />

    <TextView
        android:id="@+id/areasOfInterestMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:drawablePadding="13dp"
        android:drawableTop="@drawable/selectable_book_drawable"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:typeface="sans"
        tools:text="Наука" />


</android.support.v7.widget.CardView>