<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="204dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4d008c"
    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#deffffff"
        android:text="Истории на ночь"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
        android:layout_marginTop="45dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#deffffff"
        android:text="смотреть все"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="13dp"
        android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:id="@+id/stories_see_all"
        app:layout_constraintBottom_toBottomOf="@+id/textView"/>

    <HorizontalScrollView
        android:id="@+id/stories_stories_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        tools:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent">


            <android.support.v7.widget.CardView android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_height="100dp">

                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mem"/>

                <TextView android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#fff"
                    android:textSize="10sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="ћатематические мемасы"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="12dp"
                android:layout_height="100dp">

                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ilon"/>

                <TextView android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#fff"
                    android:textSize="10sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Ќовости из мира науки"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="12dp"
                android:layout_height="100dp">

                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/olymp"/>

                <TextView android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#fff"
                    android:textSize="10sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="–асписание олимпиад 2018"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="12dp"
                android:layout_height="100dp">

                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dud"/>

                <TextView android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#fff"
                    android:textSize="10sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="»нтервью с олипиадниками"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>