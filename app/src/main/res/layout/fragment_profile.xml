<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profileAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="50dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profileAvatar"
        app:layout_constraintTop_toTopOf="@id/profileAvatar"
        android:text="Иващенко Александр" />

    <TextView
        android:id="@+id/profileRole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/profileName"
        app:layout_constraintStart_toStartOf="@id/profileName"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        android:text="Студент" />

    <TextView
        android:id="@+id/profileCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/profileRole"
        app:layout_constraintStart_toStartOf="@id/profileRole"
        app:layout_constraintTop_toBottomOf="@id/profileRole"
        android:text="г. Санкт-Петербург" />

    <TextView
        android:id="@+id/profileGoal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/profile_violet_background_rounded"
        android:drawableTop="@drawable/ic_goal"
        android:drawablePadding="10dp"
        android:elevation="12dp"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:padding="12dp"
        android:text="Цель: поступить в университет"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:lines="2"
        android:clickable="true"
        android:focusable="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/profilePath"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAvatar" />

    <TextView
        android:id="@+id/profilePath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/profile_white_background_rounded"
        android:drawableTop="@drawable/ic_path"
        android:drawablePadding="10dp"
        android:elevation="12dp"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:padding="12dp"
        android:text="Направление: Математика"
        android:textColor="@color/text_dark_gray"
        android:textSize="12sp"
        android:lines="2"
        android:ellipsize="end"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/profileGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profileGoal"
        app:layout_constraintTop_toTopOf="@id/profileGoal" />

    <TextView
        android:id="@+id/profileChangeTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="30dp"
        android:text="Изменить данные теста"
        android:gravity="center"
        android:textSize="16sp"
        android:elevation="2dp"
        android:textColor="@android:color/black"
        android:padding="19dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/profile_white_background_rounded_2"
        app:layout_constraintStart_toStartOf="@id/profileGoal"
        app:layout_constraintEnd_toEndOf="@id/profilePath"
        app:layout_constraintTop_toBottomOf="@id/profileGoal"/>

    <TextView
        android:id="@+id/profileRepeatTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="23dp"
        android:text="Пройти тест заново"
        android:gravity="center"
        android:textSize="16sp"
        android:elevation="2dp"
        android:textColor="@android:color/black"
        android:padding="19dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/profile_white_background_rounded_2"
        app:layout_constraintStart_toStartOf="@id/profileChangeTest"
        app:layout_constraintEnd_toEndOf="@id/profileChangeTest"
        app:layout_constraintTop_toBottomOf="@id/profileChangeTest"/>

</android.support.constraint.ConstraintLayout>