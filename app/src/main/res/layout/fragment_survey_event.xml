<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/drawable_top_rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/eventAddContainer"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="start"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />

                    <ImageView
                        android:id="@+id/eventIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_selected_indicator" />

                    <TextView
                        android:id="@+id/eventTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_selector"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:lines="1"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_selected_indicator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_disabled"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="start"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_disabled"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_disabled"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="start"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_disabled"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp">

                    <!--cause it is stupid cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recycler_item_selectable_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/ic_event_disabled"
                        android:gravity="center_horizontal"
                        android:text="Добавить"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="128dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/eventNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="8dp"
            android:text="@string/is_this_sirius_event"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/eventCheckerPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:button="@drawable/checkbox_selector"
                android:paddingLeft="16dp"
                android:text="Да"
                android:textSize="12sp"
                android:typeface="sans" />

            <RadioButton
                android:id="@+id/eventCheckerNegative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:button="@drawable/checkbox_selector"
                android:drawablePadding="16dp"
                android:paddingLeft="16dp"
                android:text="Нет"
                android:textSize="12sp"
                android:typeface="sans" />

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="8dp"
            android:text="@string/is_wich"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/eventName"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="128dp"
            android:background="@drawable/edittext_rounded_stroke_drawable"
            android:lines="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="14sp" />

    </LinearLayout>
</FrameLayout>