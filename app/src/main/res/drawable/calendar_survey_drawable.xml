<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#cccccc">
    <item>
        <layer-list>

            <item>
                <shape android:tint="@color/survey_calendar_background_color">
                    <stroke
                        android:width="1dp"
                        android:color="@color/survey_calendar_border_color" />
                    <corners
                        android:bottomRightRadius="4dp"
                        android:topRightRadius="4dp" />
                </shape>
            </item>

            <item
                android:width="20dp"
                android:height="20dp"
                android:drawable="@drawable/ic_calendar_survey"
                android:gravity="center" />

        </layer-list>
    </item>
</ripple>